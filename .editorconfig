# http://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8                   # 字符集
end_of_line = lf                  # 换行类型
insert_final_newline = true       # 文件是否以空行结尾
indent_style = space              # 缩进风格
indent_size = 2                   # 缩进大小
trim_trailing_whitespace = true   # 是否去除行首的任意空白字符
insert_final_newline = true       # 是否在文件的最后插入一个新行

[*.md]
max_line_length = off
trim_trailing_whitespace = false
