{
  "name": "ucc-utils",
  "version": "0.0.2",
  "description": "Ucc工具库",
  "author": "Yuluo",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YuluoY/ucc-utils.git"
  },
  "bugs": {
    "url": "https://github.com/YuluoY/ucc-utils/issues"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "ucc",
    "ucc-utils",
    "utils",
    "tools",
    "tool",
    "toolkit",
    "toolkit",
    "javascript"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "tsup --watch",
    "build": "tsup",
    "create-config": "ts-jest config:init",
    "lint": "eslint --ignore-pattern .gitignore .",
    "lint:fix": "eslint --fix --ignore-pattern .gitignore .",
    "format": "prettier \"src/**/*.{js,ts}\" --write .",
    "prepare": "husky",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.8.0",
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/redis": "^4.0.11",
    "axios": "^1.6.8",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "mocha": "^10.4.0",
    "prettier": "^3.3.3",
    "redis": "^4.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}
