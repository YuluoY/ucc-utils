    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "lodash": "^4.17.21",
    "mocha": "^10.4.0",
    "prettier": "^3.3.3",
    "redis": "^4.7.0",
    "sass": "^1.78.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.2.4",
    "typedoc": "^0.26.7",
    "typedoc-github-theme": "^0.1.2",
    "typedoc-material-theme": "^1.1.0",
    "typedoc-plugin-markdown": "^4.2.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vue": "^3.4.35"
  }
